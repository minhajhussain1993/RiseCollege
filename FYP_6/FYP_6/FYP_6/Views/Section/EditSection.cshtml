                                    <input type="hidden" value="@Html.DisplayFor(model=>model.SectionID)" name="SectionID" />
                                    <input type="submit" value="Update Record" class="btn btn-primary" style="margin-left:12%" />
                                    @Html.ActionLink("Back", "ManageSections", "Section", null, new { @class = "btn btn-primary" })
                                    
                                    
