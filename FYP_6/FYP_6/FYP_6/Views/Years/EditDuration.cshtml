@model FYP_6.Year

@{
    Layout = null;
}
@Html.Partial("EmployeeView")
@Html.Partial("JsEnableChecker")
<!DOCTYPE html>
<html>
<body>

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        <br>
        <br>
        <br>
        <br>
        <br>
        @if (ViewBag.Message == "Successfully Record Updated")
        {
        <br />
        <div class="alert bg-success" role="alert">
            <svg class="glyph stroked checkmark"><use xlink:href="#stroked-checkmark"></use></svg> @ViewBag.Message<a href="#" class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
        </div>
        }
        else if (ViewBag.Message != "")
        {
        <br />
        <div class="alert bg-danger" role="alert">
            <svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg>
            @ViewBag.Message<a href="#" class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
        </div>
        }
        


        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Edit Degree Duration</div>
                    <div class="panel-body">

                        <div class="bootstrap-table">
                            <div class="fixed-table-header"><table></table></div><div class="fixed-table-body">
                                @using (Html.BeginForm("EditDuration", "Years", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)

                                    
                                    

                                    @Html.LabelFor(model => model.FromYear, new { @style = "padding-right:30px" })
                                    @Html.TextBoxFor(model => model.FromYear, new { @class = "form-control", @style = "width:170px; display:inline", @pattern = "^[0-9]*$", @required = true })

                                    <div style="color:red; display:inline">*@Html.ValidationMessageFor(model => model.FromYear)</div>
                                    <br />
                                    <br />
                                    @Html.LabelFor(model => model.ToYear, new { @style = "padding-right:50px" })
                                    @Html.TextBoxFor(model => model.ToYear, new { @class = "form-control", @style = "width:170px; display:inline", @pattern = "^[0-9]*$", @required = true })
    <div style="color:red; display:inline">*@Html.ValidationMessageFor(model => model.ToYear)</div>
                                    <br /><br />
                                    if (ViewBag.Batches != null)
                                    {
                                        <label style="display:inline;margin-right:-65px">Batches:</label>
                                    
                                        foreach (var item in ViewBag.Batches)
                                        {
                                                <b style="padding-left:100px">@item</b>
                                                <br />
                                        }
                                    }
                                    else
                                    {
                                        <label style="padding-right:20px">Batches:</label>
                                        <b>No Batches Enrolled</b>
                                    }
                                    
                                    <br />
                                    <br />
                                    <input type="hidden" value="@Html.DisplayFor(model=>model.YearID)" name="YearID" />
                                    <input type="submit" value="Update Record" class="btn btn-primary" style="margin-left:10%" />
                                    @Html.ActionLink("Back", "ManageDegreeDurations", "Years", null, new { @class = "btn btn-primary" })
                                    
                                    
                                }

                            </div>



                        </div><div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>


    
    
</body>
</html>