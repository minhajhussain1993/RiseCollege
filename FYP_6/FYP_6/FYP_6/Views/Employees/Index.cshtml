@model FYP_6.Employee

@{
    Layout = null;
}
<!DOCTYPE html>
@Html.Partial("EmployeeView")
<body>

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

        <br />
        <br />
        <br />
        <br />
        <br />



        <div class="row">


            <div class="row">

                <div class="col-md-12">
                    <div class="panel panel-info" style="">
                        <div class="panel-heading" style="padding-left:35%">
                            <img src="~/MyProjectImages/user icon.png" class="" style="width:30px; height:30px; padding: 0px; position:relative;top: 0; left: 0;
        border-radius: 100px;
        -moz-border-radius: 100px;
        -webkit-border-radius: 100px;}" />
                        Employee Profile</div>
                        <div class="panel-body">
                            <div style="margin-left:30%">
                                        <label style="padding-right:15.5%;padding-left:20px;">UserName</label>
                                        <span class="categoryDiv">
                                            @Html.DisplayFor(model => model.UserName)
                                        </span>
                                        <br />
                                        <br />
                                        <label style="padding-right:19%; display:inline;padding-left:20px;">Name:</label>
                                        <span class="categoryDiv">
                                            @Html.DisplayFor(model => model.Name, new
                                           {
                                               @class = "form-control",
                                               @style = "width:200px; display:inline;"
                                           })
                                        </span>
                                        <br />
                                        <br />
                                <a>
                                    <svg class="glyph stroked star" style="height: 20px;
	width: 20px;
	margin: 0px 0px 10px 0px;
	stroke-width: 3px;"><use xlink:href="#stroked-star" /></svg>
                                </a>    
                                        <label style="padding-right:145px;display:inline">Status:</label>
                                        <span class="categoryDiv">
                                            
                                            @Html.DisplayFor(model => model.Status, new { @class = "form-control", @style = "width:200px; display:inline;" })
                                        </span>
                                        <br />
                                        <br />
                                <a>
                                    <span class="glyphicon glyphicon-usd"></span>
                                </a>
                                        <label style="padding-right:145px;display:inline;padding-left:0px;">Salary:</label>
                                        <span class="categoryDiv">
                                            @Html.DisplayFor(model => model.Salary, new { @class = "form-control", @style = "width:200px; display:inline;" })
                                        </span>
                                </div>
                            <br /><br />
                                        <div class="row">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="panel panel-info" style="">
                                                        <div class="panel-heading" style="padding-left:35%">
                                                            <span class="glyphicon glyphicon-info-sign"></span>
                                                        General Details</div>
                                                        <div style="margin-left:30%;margin-top:2%">
                                                            <label style="padding-right:145px; display:inline;padding-left:20px;">Gender:</label>
                                                            <span class="categoryDiv">
                                                                @Html.DisplayFor(model => model.Gender, new { @class = "form-control", @style = "width:200px; display:inline;" })
                                                            </span>

                                                            <br />
                                                            <br />
                                                            <a style="padding-left:0px">
                                                                <svg class="glyph stroked home" style="height: 16px;
	width: 16px;
	margin: 0px 0px 10px 0px;
	stroke-width: 3px;"><use xlink:href="#stroked-home" /></svg>
                                                            </a>
                                                            <label style="padding-right:125px;">Address:</label>
                                                            <span class="categoryDiv">
                                                                @Html.DisplayFor(model => model.Address, new { @class = "form-control", @style = "width:200px; display:inline;" })
                                                            </span>


                                                            <br />
                                                            <br />                    
                                                            @*<a style="padding-left:0px">
                                                                <svg class="glyph stroked mobile device" style="height: 20px;
	width: 20px;
	margin: 0px 0px 10px 0px;
	stroke-width: 3px;"><use xlink:href="#stroked-mobile-device" /></svg>

                                                                </a>*@
                                                            <a>
                                                                <span class="glyphicon glyphicon-phone-alt"></span>
                                                            </a>
                                                                <label style="padding-right:10%">Contact No:</label>
                                                                <span class="categoryDiv">
                                                                    @Html.DisplayFor(model => model.ContactNo, new { @class = "form-control", @style = "width:200px; display:inline;" })
                                                                </span>

                                                                <br />
                                                                <br />
                                                                <label style="padding-right:12%; display:inline;padding-left:20px;">CNIC:</label>
                                                                <span class="categoryDiv">
                                                                    @Html.DisplayFor(model => model.CNIC, new
                                           {
                                               @class = "form-control",
                                               @style = "width:200px; display:inline;"
                                           })
                                                                </span>
                                                                <br />
                                                                <br />
                                                            
                                                            
                                                                <label style="padding-right:95px; display:inline;padding-left:20px">Date_of_Birth:</label>
                                                                <span class="categoryDiv">

                                                                    @Html.DisplayFor(model => model.Date_of_Birth, new { @class = "form-control", @style = "width:200px; display:inline;" })
                                                                </span>
                                                            
                                                                <br />
                                                                <br />
                                                                <label style="padding-right:95px;display:inline;padding-left:20px;">Martial_Status:</label>
                                                                <span class="categoryDiv">
                                                                    @Html.DisplayFor(model => model.Martial_Status, new { @class = "form-control", @style = "width:200px; display:inline;" })
                                                                </span>

                                                                <br />
                                                                <br />
</div>
                                                        
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        
                                    
                                    
                                
                        </div>
                    </div><!--/.panel-->
                </div><!--/.col-->
            </div><!-- /.row -->
        </div><!--/.main-->
    </div>
        
    

</body>

</html>
