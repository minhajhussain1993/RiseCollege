                                Total_Fee
                            </div><div class="fht-cell"></div>
                        </th>
                        <th style="">
                            <div class="th-inner sortable">
                                Dated

                            </div><div class="fht-cell"></div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                                            var stdProfile = Model.Student_Profile;
                                            var regStd = stdProfile.Registerations;

                                            foreach (var item in regStd)
                                            {
                                                foreach (var item2 in item.Fees)
                                                {
                                                    <tr>
                                                        
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Rollno)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item2.Registeration_Fee)

                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item2.Tution_Fee)

                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item2.Admission_Fee)

                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item2.Exam_Fee)

                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item2.Total_Installments)

                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item2.Installment)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item2.Fine)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item2.Total_Fee)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item2.Dated)
                                                        </td>
                                                        
                                                    </tr>
                                                }
                                            }
                    }
                    </tbody>
                </table>
        </div>
    </div>
                                            <br />
