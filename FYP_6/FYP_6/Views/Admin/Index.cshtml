 @model FYP_6.Admin

@{
    Layout = null;
}
<html>
<head>
    <title>Profile</title>
    <link rel="icon" href="~/B-School-Free-Education-HTML5-Website-Template/images/work/logo2.ico" />
</head>
@Html.Partial("AdminView")
@Html.Partial("JsEnableCheckerAdmin")
<body>

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

        <br />
        <br />
        <br />
        <br />
        <br />



         


            <div class="row">

                <div class="col-md-12">
                    <div class="panel panel-info" style="">
                        <div class="panel-heading" style="padding-left:35%">
                            <img src="~/MyProjectImages/user icon.png" class="" style="width:30px; height:30px; padding: 0px; position:relative;top: 0; left: 0;
        border-radius: 100px;
        -moz-border-radius: 100px;
        -webkit-border-radius: 100px;}" />
                            Admin Profile
                        </div>
                        <div class="panel-body">
                            <div style="margin-left:30%">
                                <label style="padding-right:15.5%;padding-left:20px;">UserName</label>
                                <span class="categoryDiv">
                                    @Html.DisplayFor(model => model.UserName)
                                </span>
                                <br />
                                <br />
                                <label style="padding-right:19%; display:inline;padding-left:20px;">Name:</label>
                                <span class="categoryDiv">
                                    @Html.DisplayFor(model => model.Name, new
                                           {
                                               @class = "form-control",
                                               @style = "width:200px; display:inline;"
                                           })
                                </span>
                                <br />
                                <br />
                                <label style="padding-right:129px; display:inline;padding-left:20px;">Gender:</label>
                                <span class="categoryDiv">
                                    @Html.DisplayFor(model => model.Gender, new { @class = "form-control", @style = "width:200px; display:inline;" })
                                </span>

                                <br />
                                <br />
                                <a style="padding-left:0px">
                                    <svg class="glyph stroked home" style="height: 16px;
	width: 16px;
	margin: 0px 0px 10px 0px;
	stroke-width: 3px;"><use xlink:href="#stroked-home" /></svg>
                                </a>
                                <label style="padding-right:120px;">Address:</label>
                                <span class="categoryDiv">
                                    @Html.DisplayFor(model => model.Address, new { @class = "form-control", @style = "width:200px; display:inline;" })
                                </span>


                                <br />
                                <br />
                                @*<a style="padding-left:0px">
                                                                    <svg class="glyph stroked mobile device" style="height: 20px;
        width: 20px;
        margin: 0px 0px 10px 0px;
        stroke-width: 3px;"><use xlink:href="#stroked-mobile-device" /></svg>

                                                                    </a>*@
                                <a>
                                    <span class="glyphicon glyphicon-phone-alt"></span>
                                </a>
                                <label style="padding-right:14%">Contact No:</label>
                                <span class="categoryDiv">
                                    @Html.DisplayFor(model => model.ContactNo, new { @class = "form-control", @style = "width:200px; display:inline;" })
                                </span>

                                <br />
                                <br />
                                <label style="padding-right:19.5%; display:inline;padding-left:20px;">CNIC:</label>
                                <span class="categoryDiv">
                                    @Html.DisplayFor(model => model.CNIC, new
                                           {
                                               @class = "form-control",
                                               @style = "width:200px; display:inline;"
                                           })
                                </span>
                                <br />
                                <br />


                                <label style="padding-right:83px; display:inline;padding-left:20px">Date_of_Birth:</label>
                                <span class="categoryDiv">
                                    @if (Model.Date_of_Birth.HasValue)
                                    {
                                     @*@Html.DisplayFor(model => model.Date_of_Birth.Value.ToShortDateString() , new { @class = "form-control", @style = "width:200px; display:inline;" })*@
                                        <span>@Model.Date_of_Birth.Value.ToShortDateString()</span>
                                    } 
                                     
                                </span>

                                <br />
                                <br />
                                <label style="padding-right:80px;display:inline;padding-left:20px;">Martial_Status:</label>
                                <span class="categoryDiv">
                                    @Html.DisplayFor(model => model.Martial_Status, new { @class = "form-control", @style = "width:200px; display:inline;" })
                                </span>

                                <br />
                                <br />

                            </div>
                            <br /><br />
                             
                        </div>
                    </div><!--/.panel-->
                </div><!--/.col-->
             
        </div><!--/.main-->
    </div> 
</body>

</html>
