@model FYP_6.Teacher_Attendance

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Teachers</title>
    <link rel="icon" href="~/B-School-Free-Education-HTML5-Website-Template/images/work/logo2.ico" />
</head>
@Html.Partial("EmployeeView")
@Html.Partial("JsEnableChecker")

<body>

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

        <br>
        <br>
        <br>
        <br><br>
        @if (ViewBag.Message != null)
        {
            if (ViewBag.Message == "Successfully Record Updated")
            {
                <br />
                <div class="alert bg-success" role="alert">
                    <svg class="glyph stroked checkmark"><use xlink:href="#stroked-checkmark"></use></svg> @ViewBag.Message<a href="#" class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
                </div>
            }
            else
            {
                <br />
                <div class="alert bg-danger" role="alert">
                    <svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg>
                    @ViewBag.Message<a href="#" class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
                </div>
            }
        }



        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading" style="text-align:center"> Edit Teacher Attendance</div>
                    <div class="panel-body">

                        <div class="bootstrap-table">
                            <div class="fixed-table-body">
                                @using (Html.BeginForm("EditTeacher_Attendance", "Employees", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)


                                    @Html.LabelFor(model => model.TeacherID, new { @style = "padding-right:65px" })
                                    <span class="categoryDiv">
                                        @Html.DisplayFor(model => model.TeacherID, new { @class = "form-control", @style = "width:170px; display:inline" })
                                    </span>


                                    <br />
                                    <br />

                                    @Html.LabelFor(model => model.Teacher.Name, new { @style = "padding-right:90px" })
                                    <span class="categoryDiv">
                                        @Html.DisplayFor(model => model.Teacher.Name, new { @class = "form-control", @style = "width:170px; display:inline" })
                                    </span>


                                    <br />
                                    <br />

                                    @Html.LabelFor(model => model.Date, new { @style = "padding-right:90px" })
                                    <span class="categoryDiv">
                                        @Html.DisplayFor(model => model.Date, new { @class = "form-control", @style = "width:170px; display:inline" })
                                    </span>
                                    @*<input type="date" value="@Html.DisplayFor(model=>model.Date) class = " form-control", style="width:170px; display:inline" name="newDate"/>*@

                                    <br />
                                    <br />
                                    @Html.LabelFor(model => model.Present, new { @style = "padding-right:90px" })
                                    <span class="categoryDiv">
                                        @Html.DisplayFor(model => model.Present, new { @class = "form-control", @style = "width:170px; display:inline" })
                                    </span>
                                    @*<input type="date" value="@Html.DisplayFor(model=>model.Date) class = " form-control", style="width:170px; display:inline" name="newDate"/>*@

                                    <br />
                                    <br />
                                    <label style="padding-right:25px;">Select Status</label>
                                    @*@Html.LabelFor(model => model.Present, new { @style = "padding-right:55px" })*@
                                    @Html.DropDownList("PresentStatus", new List<SelectListItem>
                                                                    {
                                                                        new SelectListItem{Text="Yes",Value="Yes",Selected=true},
                                                                        new SelectListItem{Text="No",Value="No"}

                                                                    }, new
                                                                    {
                                                                        @id = "PresentStatus",
                                                                        @class = "form-control",
                                                                        @style = "width:150px; display:inline"
                                                                    })


                                    <br />
                                    <br />


                                    <input type="hidden" value="@Html.DisplayFor(model=>model.TeacherID)" name="TeacherID" />
                                    <input type="hidden" value="@Html.DisplayFor(model => model.Date, "{0:dd/MM/yyyy}")" name="OldDate" />
                                    <input type="submit" value="Update" class="btn btn-primary" />
                                    @Html.ActionLink("Back", "TeacherAttendance", "Employees", null, new { @class = "btn btn-primary" })

                                }

                            </div>



                        </div><div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>
</html>