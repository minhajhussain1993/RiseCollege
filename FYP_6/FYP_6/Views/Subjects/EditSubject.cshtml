@model FYP_6.Subject

@{
    Layout = null;
}<!DOCTYPE html>
<html>
<head>
    <title>Subjects</title>
    <link rel="icon" href="~/B-School-Free-Education-HTML5-Website-Template/images/work/logo2.ico" />
</head>
@Html.Partial("EmployeeView")
@Html.Partial("JsEnableChecker")

<body>

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

        <br>
        <br>
        <br />
        <br>
        <br>

        @if (ViewBag.Message == "Successfully Record Updated")
        {
            <br />
            <div class="alert bg-success" role="alert">
                <svg class="glyph stroked checkmark"><use xlink:href="#stroked-checkmark"></use></svg> @ViewBag.Message<a href="#" class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
            </div>
        }
        else if (ViewBag.Message != "")
        {
            <br />
            <div class="alert bg-danger" role="alert">
                <svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg>
                @ViewBag.Message<a href="#" class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
            </div>
        }
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Edit Subject</div>
                    <div class="panel-body">

                        <div class="bootstrap-table">
                            <div class="fixed-table-body">
                                @using (Html.BeginForm("EditSubject", "Subjects", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)



                                    @*@Html.LabelFor(model => model.SubjectName, new { @style = "padding-right:70px" })*@
                                    <label style="padding-right:30px;">Subject Name</label>
                                    @Html.TextBoxFor(model => model.SubjectName, new { @class = "form-control", @style = "width:170px; display:inline", @pattern = "^[a-zA-Z\\s]+$", @required = true })

                                    <span style="color:red; " class="categoryDiv">*@Html.ValidationMessageFor(model => model.SubjectName)</span>
                                    <br />
                                    <br />
                                    <input type="hidden" value="@Html.DisplayFor(model=>model.SubjectID)" name="SubjectID" />
                                    <input type="submit" value="Update Record" class="btn btn-primary" style="margin-left:12%" />
                                    @Html.ActionLink("Back", "ManageSubjects", "Subjects", null, new { @class = "btn btn-primary" })

                                }

                            </div>



                        </div><div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>


</body>
</html>