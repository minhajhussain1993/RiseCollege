@model FYP_6.Students_Attendance
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Attendance Upload</title>
    <link rel="icon" href="~/B-School-Free-Education-HTML5-Website-Template/images/work/logo2.ico" />
</head>
@Html.Partial("TeacherView")



<body>


    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

        <br>
        <br>

        <br /><br /><br />
        @if (ViewBag.Message != null)
        {
            if (ViewBag.Message == "Successfully Attendance Uploaded")
            {
                <div class="alert bg-success" role="alert">
                    <svg class="glyph stroked checkmark">
                        <use xlink:href="#stroked-checkmark">
                        </use>
                    </svg>
                    @ViewBag.Message<a href="#" class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
                </div>
            }

            else
            {
                <br />
                <div class="alert bg-danger" role="alert">
                    <svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg>
                    @ViewBag.Message<a href="#" class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
                </div>
            }

        }

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading" style="text-align:center">Individual Attendance Upload</div>
                    <div class="panel-body">
                        <br />
                        @using (Html.BeginForm("AddAttIndi", "Teacher", FormMethod.Post))
                        {

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="row">
                                <div class="col-md-1">
                                    <label>Rollno</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="text" name="rollnohereIndi2" class="form-control" style="width:150px; display:inline" required title="rollno is required" />
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-1">
                                    <label>Part:</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="number" maxlength="1" name="partInIndiMarks2" class="form-control" style="width:150px; display:inline"
                                           title="part must be a single digit number" />
                                    @*@Html.TextBoxFor(s => s.Total_Marks, new
                                        {
                                            @id = "",
                                            @class = "form-control",
                                            @style = "width:150px; display:inline"
                                        })*@


                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-1">
                                    <label>Subject:</label>
                                </div>
                                <div class="col-md-3">
                                    <select name="subjectMarksIDIndi2" class="form-control" style="width:150px; display:inline" id="subjectMarksIDIndi2">
                                        <option value="Please select" selected="selected">Please select</option>
                                        @if (ViewBag.RelatedSubjects != null)
                                        {

                                            foreach (var item in ViewBag.RelatedSubjects)
                                            {
                                                <option value="@item.SubjectID">@item.SubjectName</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-1">
                                    @Html.LabelFor(s => s.Total_lectures)
                                </div>
                                <div class="col-md-2">
                                    @Html.TextBoxFor(s => s.Total_lectures, new
                                                                    {
                                                                        @id = "",
                                                                        @class = "form-control",
                                                                        @style = "width:150px; display:inline"
                                                                    })



                                </div>
                                <div class="col-md-5">
                                    <span style="color:red;" class="categoryDiv">@Html.ValidationMessageFor(model => model.Total_lectures)</span>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-1">
                                    <label>Attendend Lectures</label>
                                </div>
                                <div class="col-md-2">
                                    @Html.TextBoxFor(s => s.Attended_Lectures, new
                                                                    {
                                                                        @id = "",
                                                                        @class = "form-control",
                                                                        @style = "width:150px; display:inline"
                                                                    })



                                </div>
                                <div class="col-md-5">
                                    <span style="color:red;" class="categoryDiv">@Html.ValidationMessageFor(model => model.Attended_Lectures)</span>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-1">
                                    <label>Dated:</label>
                                </div>
                                <div class="col-md-3">
                                    @if (TempData["datingNach2"] != null)
                                    {
                                        <input type="text" name="date12345" class="form-control datepicker"
                                               style="width:150px; display:inline;" required data-date-format="dd-mm-yyyy" value="@TempData["datingNach2"]" />

                                    }
                                    else
                                    {
                                        <input type="text" name="date12345" class="form-control datepicker"
                                               style="width:150px; display:inline;" required data-date-format="dd-mm-yyyy" />

                                    }
                                </div>
                            </div>

                            <br />
                            <div class="row">
                                <div class="col-md-offset-1 col-md-2">
                                    <input type="submit" value="Upload"
                                           class="btn btn-success" style="display:inline;" name="UploadButton" />


                                    @Html.ActionLink("Back", "ShowOptionsAttendance", "Teacher",
                                                                null, new
                                                                {
                                                                    @type = "submit",
                                                                    @class = "btn btn-warning",
                                                                    @style = "style=display:inline;"
                                                                })

                                </div>
                            </div>

                        }
                    </div>
                </div>

            </div>

        </div>


    </div>


</body>

</html>
